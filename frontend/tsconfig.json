{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/types": ["./@types/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "src/*.jsx"],
  "exclude": ["node_modules", "dist"]
}
